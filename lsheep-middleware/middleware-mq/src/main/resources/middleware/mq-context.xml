<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="mqProducer" factory-bean="mqFactoryImpl" factory-method="producer" destroy-method="shutdown">
		<constructor-arg index="1">
			<bean class="com.lsheep.middleware.mq.MqConfig">
				<property name="mqType" value="${lsheep.mq.type}" />
				<property name="groupName" value="${lsheep.mq.groupName}" />
				<property name="connection" value="${lsheep.mq.connection}" />
			</bean>
		</constructor-arg>
	</bean>

</beans>
